<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminRegister">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Name"
        android:inputType="text"
        android:id="@+id/adminname"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminname"
        android:id="@+id/adminmail"
        android:layout_margin="20dp"
        android:inputType="textEmailAddress"
        android:hint="E-Mail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminmail"
        android:layout_margin="20dp"
        android:text="Enter valid email"
        android:textColor="@color/red"
        android:visibility="gone"
        android:id="@+id/mailiderror"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mailiderror"
        android:layout_margin="20dp"
        android:hint="Phone"
        android:inputType="number"
        android:id="@+id/adminphone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminphone"
        android:layout_margin="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/adminpass"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminpass"
        android:layout_margin="20dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:id="@+id/adminconfirmpass"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminconfirmpass"
        android:hint="ID proof"
        android:layout_margin="20dp"
        android:id="@+id/idproof"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_upload_24"
        android:layout_below="@id/adminconfirmpass"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:id="@+id/uploadIDproof"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idproof"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Register"
        android:id="@+id/adminregbutton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminregbutton"
        android:text="Already have an account?"
        android:layout_marginLeft="120dp"
        android:id="@+id/adminhaveacc"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminregbutton"
        android:text="Login"
        android:layout_marginLeft="285dp"
        android:textColor="@color/purple_700"
        />
</RelativeLayout>